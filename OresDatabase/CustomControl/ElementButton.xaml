<UserControl x:Class="OresDatabase.CustomControl.ElementButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OresDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="105"
             x:Name="root">
    <Grid>
        <Button Style="{Binding ElementStyleProperty, ElementName=root}" Content="{Binding ElementTextProperty, ElementName=root}"/>
        <TextBlock Style="{StaticResource elementNumber}" Text="{Binding ElementNumberProperty, ElementName=root}"></TextBlock>
    </Grid>
</UserControl>
